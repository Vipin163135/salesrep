<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:drawableLeft="@drawable/quantum_ic_arrow_back_grey600_24"
            android:drawablePadding="@dimen/_12sdp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="start"
            android:text="@string/execute_survey"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="1dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_12sdp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:textColor="@color/blue_004"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="end"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="@string/customer_code"
                                    android:textColor="@color/grey_6"
                                    android:textSize="@dimen/_12sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvTitle" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvCusomerName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="28.5km"
                                    android:textColor="@color/blue_004"
                                    android:textSize="@dimen/_12sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvTitle" />


                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:gravity="start"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="@string/customer_name"
                                    android:textColor="@color/grey_6"
                                    android:textSize="@dimen/_12sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvTitle" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvCusomerNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="@string/name"
                                    android:textColor="@color/blue_004"
                                    android:textSize="@dimen/_12sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvTitle" />


                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/tvEnd"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="@dimen/_32sdp"-->
                        <!--                            android:layout_weight="1"-->
                        <!--                            android:background="@drawable/bg_outline_red"-->
                        <!--                            android:fontFamily="@font/montserrat_semibold"-->
                        <!--                            android:gravity="center"-->
                        <!--                            android:backgroundTint="@color/red"-->
                        <!--                            android:backgroundTintMode="add"-->
                        <!--                            android:layout_marginTop="@dimen/_10sdp"-->
                        <!--                            android:paddingTop="@dimen/_6sdp"-->
                        <!--                            android:paddingBottom="@dimen/_6sdp"-->
                        <!--                            android:text="@string/end"-->
                        <!--                            android:textAlignment="center"-->
                        <!--                            android:textColor="@color/red"-->
                        <!--                            android:textSize="@dimen/_13sdp" />-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvSave"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@drawable/background_blue_light_curved_12dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center"
                                android:paddingTop="@dimen/_6sdp"
                                android:paddingBottom="@dimen/_6sdp"
                                android:text="@string/save"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/tvEnd"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_outline_red"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center"
                                android:paddingTop="@dimen/_6sdp"
                                android:paddingBottom="@dimen/_6sdp"
                                android:text="@string/end"
                                android:textAlignment="center"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/llURL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"

                            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                            app:layout_constraintStart_toStartOf="@id/guidelineStart"
                            app:layout_constraintTop_toBottomOf="@id/tvTitle">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:id="@+id/llOption"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_outline_grey"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvTeamName"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="@dimen/_36sdp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:hint="@string/select"
                                    android:clickable="false"
                                    android:imeOptions="actionDone"
                                    android:inputType="textWebEditText"
                                    android:paddingEnd="@dimen/_16sdp"
                                    android:paddingRight="@dimen/_16sdp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/grey_6"
                                    android:textSize="@dimen/_12sdp"
                                    android:paddingLeft="@dimen/_12sdp"
                                    />

                                <View
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="match_parent"
                                    android:background="@color/grey_7"/>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_36sdp"
                                    android:layout_height="@dimen/_36sdp"
                                    android:id="@+id/imgDown"
                                    app:srcCompat="@drawable/ic_down"
                                    android:padding="@dimen/_4sdp"
                                    />

                            </androidx.appcompat.widget.LinearLayoutCompat>


                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_32sdp"
                                android:paddingStart="@dimen/_12sdp"
                                android:paddingEnd="@dimen/_12sdp"
                                android:visibility="invisible"
                                app:layout_constraintTop_toTopOf="@+id/llOption"/>
                            <!--            <ImageView-->
                            <!--                android:layout_width="wrap_content"-->
                            <!--                android:layout_height="wrap_content"-->
                            <!--                android:src="@drawable/belvedere_ic_check_circle"-->
                            <!--                app:tint="@color/colorGreenLight"-->
                            <!--                android:id="@+id/ivCheck"-->
                            <!--                android:visibility="gone"-->
                            <!--                android:padding="@dimen/_8sdp"/>-->

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvQuestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="4"
                tools:listitem="@layout/item_question_multiselect"/>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/tvComplete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/background_blue_light_curved_12dp"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:text="@string/complete"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>
</layout>
