        <!--            android:layout_marginHorizontal="@dimen/_16sdp"-->
        <!--            android:textAlignment="center"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="@dimen/_13sdp" />-->

    </LinearLayout>

</layout>
